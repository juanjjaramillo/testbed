{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
  ],
  "printConfig": true,
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths",
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "matchCurrentVersion": "!/^(0|v0)/",
      "automerge": true,
    },
    {
      "groupName": "Batch Golang version bumps in single PR",
      "matchPackageNames": ["golang", "go"],
    },
    {
      // Go versions updating is disabled by default
      // Source: https://github.com/renovatebot/renovate/issues/16715
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump",
      // Disable automerge to make sure GitHub infrastructure has time to catch up
      "automerge": false,
    },
  ],
  "customManagers": [
    {
      "description": "Update helm-docs",
      "customType": "regex",
      "fileMatch": [
        "(^|/)release-version\.ya?ml$",
      ],
      "matchStrings": [
        "\\s+version=\"(?<currentValue>.*?)\"",
      ],
      "depNameTemplate": "norwoodj/helm-docs",
      "datasourceTemplate": "github-releases",
    },
    {
      "description": "Update Go version",
      "customType": "regex",
      "fileMatch": [
        "(^|/)ci\.ya?ml$",
      ],
      "matchStrings": [
        "\\sGO_VERSION: '(?<currentValue>.*)'\\s"
      ],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version",
    },
  ],
}
